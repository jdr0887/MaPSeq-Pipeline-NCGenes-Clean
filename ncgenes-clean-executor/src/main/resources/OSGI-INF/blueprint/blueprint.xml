<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="eager">

  <cm:property-placeholder persistent-id="edu.unc.mapseq.executor.ncgenes.clean"
    update-strategy="reload">
    <cm:default-properties>
      <cm:property name="period" value="5" />
    </cm:default-properties>
  </cm:property-placeholder>

  <reference id="NCGenesCleanPipelineBeanService" interface="edu.unc.mapseq.pipeline.PipelineBeanService"
    component-name="NCGenesCleanPipelineBeanService" />

  <bean id="task" class="edu.unc.mapseq.executor.ncgenes.clean.NCGenesCleanPipelineExecutorTask">
    <property name="pipelineBeanService" ref="NCGenesCleanPipelineBeanService" />
  </bean>

  <bean id="NCGenesCleanPipelineExecutorService" class="edu.unc.mapseq.executor.ncgenes.clean.NCGenesCleanPipelineExecutorService"
    init-method="start" destroy-method="stop" activation="eager">
    <property name="task" ref="task" />
    <property name="period" value="${period}" />
    <cm:managed-properties persistent-id="edu.unc.mapseq.executor.ncgenes.clean" update-strategy="container-managed" />
  </bean>

</blueprint>
